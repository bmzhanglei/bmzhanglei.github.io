clip-path:polygon(50% 0,100% 100%,0 100%);   //三角形
clip-path:ellipse(50% 100%);   //椭圆

shape-outside:ellipse(50% 100%)；  //围绕椭圆环绕
shape-outside: border-box   //  padding-box / content-box / margin-box / border-box 

